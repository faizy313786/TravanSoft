<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
            <corners android:radius="12dp" /> <!-- Radius for rounded corners -->
        </shape>
    </item>

    <!-- Border -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:width="2dp"
                android:color="@color/trnswhite"
                 />
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>